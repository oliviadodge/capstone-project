<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:layout_margin="@dimen/text_margin"
              android:orientation="vertical"
              tools:context="com.example.olivi.maphap.FilterFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/text_margin"
        android:layout_marginTop="@dimen/text_margin"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/fragment_filter_date_title"
            android:textSize="16sp"/>

        <Button
            android:id="@+id/button_date_picker"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/text_date_picker_button"/>
    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/text_margin"
        android:layout_marginTop="@dimen/text_margin"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/pref_title_category_location_preferences"
            tools:text="@string/pref_title_category_location_preferences"
            android:textSize="16sp"/>

        <Button
            android:id="@+id/button_category_picker"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/summary_category_preference"
            tools:text="@string/summary_category_preference"
            />
    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/text_margin"
        android:layout_marginTop="@dimen/text_margin"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/fragment_filter_seekbar_title"
            android:textSize="16sp"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <SeekBar
                android:id="@+id/seekbar_radius"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:max="100"
                />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/seekbar_radius"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/seekbar_label_start"
                    android:labelFor="@id/seekbar_radius"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="1 mile"
                    tools:text="1 mile"
                    />
                <TextView
                    android:id="@+id/seekbar_label_end"
                    android:labelFor="@id/seekbar_radius"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="100 miles"
                    tools:text="100 miles"
                    />
            </LinearLayout>
            <TextView
                android:id="@+id/seekbar_label"
                android:labelFor="@id/seekbar_radius"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/seekbar_radius"
                android:layout_marginLeft="32dp"
                android:layout_marginStart="32dp"
                android:layout_marginTop="16dp"
                tools:text="Search Radius: 25 miles"
                />
        </RelativeLayout>

    </LinearLayout>


</LinearLayout>

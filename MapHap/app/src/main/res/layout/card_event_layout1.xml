<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="8dp"
        android:paddingBottom="8dp"
        android:orientation="vertical"
        >

        <TextView
            android:id="@+id/detail_start_textview"
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:maxLines="1"
            android:textSize="16sp"
            tools:text="Monday, January 4, 2016"
            />

        <TextView
            android:id="@+id/detail_end_textview"
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:maxLines="1"
            android:textSize="16sp"
            tools:text="Wednesday, January 6, 2016"
            />

    </LinearLayout>

    <TextView
        android:id="@+id/detail_venue_textview"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:textSize="16sp"
        tools:text="California Academy of Sciences"
        />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/detail_url_textview"
        android:textSize="16sp"
        android:autoLink="web"
        android:linksClickable="true"
        tools:text="www.event-url.com/this-may-be-a-very-long-url"
        />

</LinearLayout>